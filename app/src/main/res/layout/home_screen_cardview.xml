<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/min_margin_from_start_end"
        android:layout_marginEnd="@dimen/min_margin_from_start_end"
        android:layout_marginTop="@dimen/home_margin_cards_next_days">
        
        <TextView
            android:id="@+id/day_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today"
            android:textSize="@dimen/home_parameters_text_size"
            />

        <TextView
            android:id="@+id/date_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/09"

            />


    </androidx.cardview.widget.CardView>


</RelativeLayout>